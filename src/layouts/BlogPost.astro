---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  date: Date;
  description?: string;
}

const { title, date, description } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
}).format(date);
---

<BaseLayout title={title} description={description}>
  <style>
    .article-header {
      position: relative;
      padding: 3rem 0;
      border-left: 4px solid #4a4a4a;
      padding-left: 1.5rem;
      margin-bottom: 4rem;
    }

    @media (min-width: 768px) {
      .article-header {
        padding: 4rem 0 5rem 2rem;
        margin-bottom: 5rem;
        border-left-width: 6px;
      }
    }

    .article-header::before {
      content: '';
      position: absolute;
      left: -3px;
      top: 0;
      width: 2px;
      height: 100%;
      background: linear-gradient(180deg, #8a8a8a 0%, #4a4a4a 100%);
    }

    .article-header h1 {
      font-family: var(--font-mono);
      font-size: 2rem;
      font-weight: 700;
      letter-spacing: -0.02em;
      text-transform: uppercase;
      margin: 0;
      line-height: 1.2;
    }

    @media (min-width: 768px) {
      .article-header h1 {
        font-size: 3rem;
      }
    }

    .article-date {
      font-family: var(--font-mono);
      font-size: 0.75rem;
      color: #888;
      margin-top: 1rem;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      font-weight: 500;
    }

    @media (min-width: 768px) {
      .article-date {
        font-size: 0.85rem;
      }
    }

    .article-content {
      max-width: 50rem;
      line-height: 1.8;
      text-align: justify;
    }

    .back-link {
      font-family: var(--font-mono);
      font-size: 0.85rem;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      font-weight: 600;
      margin-top: 4rem;
      padding-top: 2rem;
      border-top: 2px solid #e0e0e0;
      display: inline-block;
    }

    @media (prefers-color-scheme: dark) {
      .back-link {
        border-top-color: #404040;
      }
    }

    @media (min-width: 768px) {
      .back-link {
        margin-top: 5rem;
        padding-top: 3rem;
      }
    }

    /* Callout/Alert Boxes */
    .article-content :global(blockquote) {
      margin: 1.5rem 0;
      padding: 1rem 1.25rem;
      border-left: 4px solid #4a4a4a;
      background: #f5f5f5;
      border-radius: 4px;
      position: relative;
    }

    @media (prefers-color-scheme: dark) {
      .article-content :global(blockquote) {
        background: #1a1a1a;
        border-left-color: #505050;
      }
    }

    /* Markdown Alert Styling */
    .article-content :global(.markdown-alert) {
      padding: 1rem 1.25rem;
      border-left: 4px solid;
      border-radius: 4px;
      margin: 1.5rem 0;
    }

    .article-content :global(.markdown-alert > .markdown-alert-title) {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-weight: 700;
      font-size: 0.9rem;
      margin-bottom: 0.5rem;
      font-family: var(--font-mono);
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .article-content :global(.markdown-alert > .markdown-alert-title svg) {
      display: none;
    }

    /* Note callout - blue theme */
    .article-content :global(.markdown-alert-note) {
      border-left-color: #0969da;
      background: #ddf4ff;
    }

    .article-content :global(.markdown-alert-note > .markdown-alert-title) {
      color: #0969da;
    }

    .article-content :global(.markdown-alert-note > .markdown-alert-title::before) {
      content: "â„¹ï¸";
    }

    @media (prefers-color-scheme: dark) {
      .article-content :global(.markdown-alert-note) {
        border-left-color: #58a6ff;
        background: #0d1117;
      }
      .article-content :global(.markdown-alert-note > .markdown-alert-title) {
        color: #58a6ff;
      }
    }

    /* Important callout - orange theme */
    .article-content :global(.markdown-alert-important) {
      border-left-color: #d97706;
      background: #fff3e0;
    }

    .article-content :global(.markdown-alert-important > .markdown-alert-title) {
      color: #d97706;
    }

    .article-content :global(.markdown-alert-important > .markdown-alert-title::before) {
      content: "âš¡";
    }

    @media (prefers-color-scheme: dark) {
      .article-content :global(.markdown-alert-important) {
        border-left-color: #fb923c;
        background: #0d1117;
      }
      .article-content :global(.markdown-alert-important > .markdown-alert-title) {
        color: #fb923c;
      }
    }

    /* Warning callout - orange theme */
    .article-content :global(.markdown-alert-warning) {
      border-left-color: #d4a72c;
      background: #fff8c5;
    }

    .article-content :global(.markdown-alert-warning > .markdown-alert-title) {
      color: #d4a72c;
    }

    .article-content :global(.markdown-alert-warning > .markdown-alert-title::before) {
      content: "âš ï¸";
    }

    @media (prefers-color-scheme: dark) {
      .article-content :global(.markdown-alert-warning) {
        border-left-color: #f0b72f;
        background: #0d1117;
      }
      .article-content :global(.markdown-alert-warning > .markdown-alert-title) {
        color: #f0b72f;
      }
    }

    /* Tip callout - green theme */
    .article-content :global(.markdown-alert-tip) {
      border-left-color: #1a7f37;
      background: #dafbe1;
    }

    .article-content :global(.markdown-alert-tip > .markdown-alert-title) {
      color: #1a7f37;
    }

    .article-content :global(.markdown-alert-tip > .markdown-alert-title::before) {
      content: "ðŸ’¡";
    }

    @media (prefers-color-scheme: dark) {
      .article-content :global(.markdown-alert-tip) {
        border-left-color: #3fb950;
        background: #0d1117;
      }
      .article-content :global(.markdown-alert-tip > .markdown-alert-title) {
        color: #3fb950;
      }
    }

    /* Caution callout - red theme */
    .article-content :global(.markdown-alert-caution) {
      border-left-color: #d1242f;
      background: #ffebe9;
    }

    .article-content :global(.markdown-alert-caution > .markdown-alert-title) {
      color: #d1242f;
    }

    .article-content :global(.markdown-alert-caution > .markdown-alert-title::before) {
      content: "ðŸš«";
    }

    @media (prefers-color-scheme: dark) {
      .article-content :global(.markdown-alert-caution) {
        border-left-color: #f85149;
        background: #0d1117;
      }
      .article-content :global(.markdown-alert-caution > .markdown-alert-title) {
        color: #f85149;
      }
    }
  </style>

  <article>
    <header class="article-header">
      <h1>{title}</h1>
      <time datetime={date.toISOString()} class="article-date">
        {formattedDate}
      </time>
    </header>
    <div class="article-content">
      <slot />
    </div>
  </article>
  <div class="back-link">
    <a href="/blog">&larr; Back to Blog</a>
  </div>
</BaseLayout>
