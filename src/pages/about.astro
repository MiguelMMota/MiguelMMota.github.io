---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="About">
  <style>
    .page-header {
      position: relative;
      padding: 3rem 0;
      border-left: 4px solid #4a4a4a;
      padding-left: 1.5rem;
      margin-bottom: 4rem;
    }

    @media (min-width: 768px) {
      .page-header {
        padding: 4rem 0 5rem 2rem;
        margin-bottom: 5rem;
        border-left-width: 6px;
      }
    }

    .page-header::before {
      content: '';
      position: absolute;
      left: -3px;
      top: 0;
      width: 2px;
      height: 100%;
      background: linear-gradient(180deg, #8a8a8a 0%, #4a4a4a 100%);
    }

    .page-header h1 {
      font-family: var(--font-mono);
      font-size: 2.5rem;
      font-weight: 700;
      letter-spacing: -0.03em;
      text-transform: uppercase;
      margin: 0;
      line-height: 1.1;
    }

    @media (min-width: 768px) {
      .page-header h1 {
        font-size: 4rem;
      }
    }

    .page-header .subtitle {
      font-family: var(--font-mono);
      font-size: 0.85rem;
      color: #888;
      margin-top: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      font-weight: 500;
    }

    @media (min-width: 768px) {
      .page-header .subtitle {
        font-size: 1rem;
        margin-top: 1rem;
      }
    }

    .intro-section {
      display: grid;
      gap: 2rem;
      align-items: flex-start;
      margin-bottom: 2rem;
      grid-template-columns: 1fr;
      max-width: 50rem;
    }

    @media (min-width: 768px) {
      .intro-section {
        grid-template-columns: 200px 1fr;
        gap: 3rem;
        margin-bottom: 2.5rem;
      }
    }

    .profile-image {
      width: 150px;
      height: 150px;
      object-fit: cover;
      object-position: center 20%;
      border: 3px solid #d0d0d0;
      filter: grayscale(20%);
      justify-self: start;
    }

    @media (min-width: 768px) {
      .profile-image {
        width: 200px;
        height: 200px;
      }
    }

    @media (prefers-color-scheme: dark) {
      .profile-image {
        border-color: #505050;
      }
    }

    .intro-text {
      margin: 0;
      line-height: 1.7;
      text-align: justify;
    }

    .section-header {
      font-family: var(--font-mono);
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.15em;
      color: #666;
      margin: 3rem 0 1.5rem 0;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid #e0e0e0;
      font-weight: 600;
    }

    @media (min-width: 768px) {
      .section-header {
        font-size: 0.85rem;
        margin: 4rem 0 2rem 0;
        padding-bottom: 0.75rem;
      }
    }

    @media (prefers-color-scheme: dark) {
      .section-header {
        color: #999;
        border-bottom-color: #404040;
      }
    }

    .contact-list {
      list-style: none;
      padding: 0;
      margin: 1rem 0;
    }

    .contact-list li {
      font-family: var(--font-mono);
      font-size: 0.9rem;
      margin: 0.75rem 0;
      padding-left: 1.5rem;
      position: relative;
    }

    .contact-list li::before {
      content: '';
      position: absolute;
      left: 0;
      color: #888;
    }

    .content-section {
      max-width: 50rem;
    }

    .content-section p {
      line-height: 1.7;
      margin: 1rem 0;
      text-align: justify;
    }

    .rankings-section {
      margin-top: 4rem;
      max-width: 50rem;
    }

    @media (min-width: 768px) {
      .rankings-section {
        margin-top: 5rem;
      }
    }

    .rankings-grid {
      display: grid;
      gap: 3rem;
      margin-top: 2rem;
    }

    @media (min-width: 1024px) {
      .rankings-grid {
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
      }
    }

    .ranking-category {
      background: #f8f8f8;
      padding: 1.5rem;
      border-left: 3px solid #4a4a4a;
    }

    @media (prefers-color-scheme: dark) {
      .ranking-category {
        background: #1a1a1a;
        border-left-color: #666;
      }
    }

    .ranking-category h3 {
      font-family: var(--font-mono);
      font-size: 1rem;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      margin: 0 0 1.25rem 0;
      font-weight: 600;
      color: #333;
    }

    @media (prefers-color-scheme: dark) {
      .ranking-category h3 {
        color: #ccc;
      }
    }

    .ranking-list {
      list-style: none;
      padding: 0;
      margin: 0;
      counter-reset: ranking-counter;
    }

    .ranking-list li {
      font-family: var(--font-mono);
      font-size: 0.85rem;
      line-height: 1.6;
      margin: 0.5rem 0;
      padding-left: 2rem;
      position: relative;
      counter-increment: ranking-counter;
      color: #555;
    }

    @media (prefers-color-scheme: dark) {
      .ranking-list li {
        color: #aaa;
      }
    }

    .ranking-list li::before {
      content: counter(ranking-counter);
      position: absolute;
      left: 0;
      font-weight: 700;
      color: #4a4a4a;
      min-width: 1.25rem;
      text-align: right;
    }

    @media (prefers-color-scheme: dark) {
      .ranking-list li::before {
        color: #888;
      }
    }

    .ranking-placeholder {
      font-style: italic;
      color: #999;
    }

    @media (prefers-color-scheme: dark) {
      .ranking-placeholder {
        color: #666;
      }
    }
  </style>

