---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects'))
  .sort((a, b) => (b.data.date?.valueOf() ?? 0) - (a.data.date?.valueOf() ?? 0));
---

<BaseLayout title="Projects">
  <style>
    .page-header {
      position: relative;
      padding: 3rem 0;
      border-left: 4px solid #4a4a4a;
      padding-left: 1.5rem;
      margin-bottom: 4rem;
    }

    @media (min-width: 768px) {
      .page-header {
        padding: 4rem 0 5rem 2rem;
        margin-bottom: 5rem;
        border-left-width: 6px;
      }
    }

    .page-header::before {
      content: '';
      position: absolute;
      left: -3px;
      top: 0;
      width: 2px;
      height: 100%;
      background: linear-gradient(180deg, #8a8a8a 0%, #4a4a4a 100%);
    }

    .page-header h1 {
      font-family: var(--font-mono);
      font-size: 2.5rem;
      font-weight: 700;
      letter-spacing: -0.03em;
      text-transform: uppercase;
      margin: 0;
      line-height: 1.1;
    }

    @media (min-width: 768px) {
      .page-header h1 {
        font-size: 4rem;
      }
    }

    .page-header .subtitle {
      font-family: var(--font-mono);
      font-size: 0.85rem;
      color: #888;
      margin-top: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      font-weight: 500;
    }

    @media (min-width: 768px) {
      .page-header .subtitle {
        font-size: 1rem;
        margin-top: 1rem;
      }
    }

    .project-list {
      display: grid;
      gap: 0;
      list-style: none;
      padding: 0;
      margin: 0;
    }

    @media (min-width: 1024px) {
      .project-list {
        grid-template-columns: repeat(2, 1fr);
        gap: 3rem 4rem;
      }
    }

    .project-item {
      padding: 1.25rem 0;
      border-bottom: 1px solid #e5e5e5;
      position: relative;
    }

    @media (min-width: 1024px) {
      .project-item {
        padding: 1.5rem 0;
      }
    }

    @media (prefers-color-scheme: dark) {
      .project-item {
        border-bottom-color: #333;
      }
    }

    .project-item:hover {
      background: linear-gradient(90deg, transparent 0%, rgba(128, 128, 128, 0.03) 100%);
    }

    @media (prefers-color-scheme: dark) {
      .project-item:hover {
        background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.02) 100%);
      }
    }

    .project-item::before {
      content: '//';
      position: absolute;
      left: -1.5rem;
      top: 1.25rem;
      font-family: var(--font-mono);
      color: #ccc;
      font-size: 0.85rem;
    }

    @media (prefers-color-scheme: dark) {
      .project-item::before {
        color: #555;
      }
    }

    .project-title {
      font-family: var(--font-mono);
      font-size: 1rem;
      font-weight: 600;
      text-decoration: none;
      display: block;
      color: var(--color-text);
    }

    .project-title:hover {
      color: var(--color-link);
      text-decoration: none;
    }

    .project-description {
      margin-top: 0.5rem;
      color: var(--color-text-light);
      font-size: 0.95rem;
      line-height: 1.5;
    }

    .tag-list {
      margin-top: 0.75rem;
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .tag {
      font-family: var(--font-mono);
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      padding: 0.25rem 0.6rem;
      border: 1px solid #d0d0d0;
      background: transparent;
      color: var(--color-text-light);
    }

    @media (prefers-color-scheme: dark) {
      .tag {
        border-color: #444;
      }
    }
  </style>

  <header class="page-header">
    <h1>Projects</h1>
    <p class="subtitle">Things I've Built and Experimented With</p>
  </header>

  <ul class="project-list">
    {projects.map(project => (
      <li class="project-item">
        <a href={`/projects/${project.slug}`} class="project-title">
          {project.data.title}
        </a>
        {project.data.description && (
          <p class="project-description">
            {project.data.description}
          </p>
        )}
        {project.data.tags && project.data.tags.length > 0 && (
          <div class="tag-list">
            {project.data.tags.map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </li>
    ))}
  </ul>
</BaseLayout>
